<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpaceShipGame">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/space_background"
        android:backgroundTintMode="src_over"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/shieldP1"
            android:layout_width="115dp"
            android:layout_height="72dp"
            android:layout_alignStart="@+id/imageP1"
            android:layout_alignTop="@+id/imageP1"
            android:layout_alignEnd="@+id/imageP1"
            android:layout_alignBottom="@+id/imageP1"
            android:layout_marginStart="-11dp"
            android:layout_marginTop="-25dp"
            android:layout_marginEnd="-11dp"
            android:layout_marginRight="230dp"
            android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toTopOf="@id/imageP1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ship_shield" />

        <ImageView
            android:id="@+id/shieldP2"
            android:layout_width="115dp"
            android:layout_height="72dp"
            android:layout_alignStart="@+id/imageP2"
            android:layout_alignTop="@+id/imageP2"
            android:layout_alignEnd="@+id/imageP2"
            android:layout_alignBottom="@+id/imageP2"
            android:layout_marginStart="-11dp"
            android:layout_marginTop="-25dp"
            android:layout_marginEnd="-11dp"
            android:layout_marginRight="230dp"
            android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toTopOf="@+id/imageP2"
            app:layout_constraintEnd_toEndOf="@id/imageP2"
            app:layout_constraintStart_toStartOf="@id/imageP2"
            app:layout_constraintTop_toTopOf="@id/imageP2"
            app:srcCompat="@drawable/ship_shield" />

        <ImageView
            android:id="@+id/shieldP4"
            android:layout_width="115dp"
            android:layout_height="72dp"
            android:layout_alignStart="@+id/imageP4"
            android:layout_alignTop="@+id/imageP4"
            android:layout_alignEnd="@+id/imageP4"
            android:layout_alignBottom="@+id/imageP4"
            android:layout_marginStart="-11dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="-11dp"
            android:layout_marginRight="235dp"
            android:layout_marginBottom="-35dp"
            app:layout_constraintBottom_toTopOf="@id/imageP4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ship_shield_upsidedown" />

        <ImageView
            android:id="@+id/shieldP3"
            android:layout_width="115dp"
            android:layout_height="72dp"
            android:layout_alignStart="@+id/imageP3"
            android:layout_alignTop="@+id/imageP3"
            android:layout_alignEnd="@+id/imageP3"
            android:layout_alignBottom="@+id/imageP3"
            android:layout_marginStart="-11dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="-11dp"
            android:layout_marginRight="235dp"
            android:layout_marginBottom="-35dp"
            app:layout_constraintBottom_toTopOf="@id/imageP3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ship_shield_upsidedown" />

        <ImageView
            android:id="@+id/bulletP1"
            android:layout_width="179dp"
            android:layout_height="198dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="232dp"
            android:layout_marginRight="232dp"
            android:layout_marginBottom="267dp"
            app:layout_constraintBottom_toTopOf="@+id/imageP2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bullet1" />

        <ImageView
            android:id="@+id/bulletP3"
            android:layout_width="179dp"
