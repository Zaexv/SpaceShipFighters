        <ImageView
            android:id="@+id/bulletP4"
            android:layout_width="179dp"
            android:layout_height="198dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="232dp"
            android:layout_marginRight="232dp"
            android:layout_marginBottom="267dp"
            app:layout_constraintBottom_toTopOf="@+id/imageP2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bullet2" />

        <ImageView
            android:id="@+id/imageP4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="290dp"
            android:layout_marginTop="24dp"
            android:rotation="0"
            app:srcCompat="@drawable/ship4" />

        <ImageView
            android:id="@+id/imageP1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="278dp"
            android:layout_marginTop="600dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.698"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.543"
            app:srcCompat="@drawable/ship1" />

        <ImageView
            android:id="@+id/imageP2"
            android:layout_width="80dp"
